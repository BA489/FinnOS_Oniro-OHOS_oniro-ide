  "private": true,
  "name": "oniro-ide-electron",
  "author": "Typefox",
  "description": "Huawei Oniro IDE",
  "version": "0.0.0",
  "main": "scripts/oniro-electron-main.js",
  "dependencies": {
    "@theia/bulk-edit": "file:../../../theia/packages/bulk-edit",
